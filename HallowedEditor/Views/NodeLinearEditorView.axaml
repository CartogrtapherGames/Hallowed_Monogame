<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Hallowed.Editor.ViewModels"
             x:Class="Hallowed.Editor.Views.NodeLinearEditorView"
             x:DataType="vm:NodeLinearViewModel">
    
    <Border Classes="ContentPanel">
        <StackPanel Spacing="15">
            
            <TextBlock Text="📄 Linear Node Editor"
                       Classes="SectionHeader"
                       FontSize="18" />
            
            <Border Background="{StaticResource ParchmentMedium}"
                    Padding="15"
                    CornerRadius="8">
                <Grid ColumnDefinitions="120,*" 
                      RowDefinitions="Auto,Auto,Auto,Auto" 
                      RowSpacing="10">
                    
                    <!-- Guid (Read-only) -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Guid:"
                               Classes="SmallText"
                               VerticalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.Column="1"
                               Text="{Binding Guid}"
                               FontFamily="Consolas"
                               FontSize="10"
                               Opacity="0.6"
                               VerticalAlignment="Center"
                               ToolTip.Tip="Unique identifier for this node" />
                    
                    <!-- ID -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                               Text="ID:"
                               Classes="SmallText"
                               VerticalAlignment="Center" />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding Id}"
                             Watermark="e.g., intro_greeting" />
                    
                    <!-- Dialogue Text -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Dialogue:"
                               Classes="SmallText"
                               VerticalAlignment="Top"
                               Margin="0,8,0,0" />
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding Text}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="150"
                             Watermark="Enter dialogue..." />
                    
                    <!-- Next Node Selector (Guid-based) -->
                    <TextBlock Grid.Row="3" Grid.Column="0"
                               Text="Next Node:"
                               Classes="SmallText"
                               VerticalAlignment="Center" />
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding AvailableNodes}"
                              SelectedValue="{Binding NextNodeGuid}"
                              SelectedValueBinding="{Binding NodeGuid}"
                              DisplayMemberBinding="{Binding DisplayName}"
                              HorizontalAlignment="Stretch"
                              PlaceholderText="Select next node..." />
                    
                </Grid>
            </Border>
            
        </StackPanel>
    </Border>
</UserControl>