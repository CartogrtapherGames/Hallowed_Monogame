<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:HallowedEditor.ViewModels"
             x:Class="HallowedEditor.Views.ItemsView"
             x:DataType="vm:ItemsViewModel">
    
    <Border Classes="ContentPanel">
        <Grid ColumnDefinitions="250,*" ColumnSpacing="15">
            
            <!-- Left: Items List -->
            <Border Grid.Column="0" 
                    Background="{StaticResource ParchmentMedium}"
                    Padding="10,10,10,10"
                    CornerRadius="8">
                <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="0">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                               Text="💎 Items" 
                               Classes="SectionHeader"
                               FontSize="18"/>
                    
                    <Separator Grid.Row="1" Margin="0,10,0,10"/>
                    
                    <!-- ListBox fills remaining space -->
                    <ListBox Grid.Row="2"
                             ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem}"
                             Padding="0"
                             Margin="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Id, StringFormat='{}{0:D4}'}" FontWeight="Bold"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding Name}"/>
                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <!-- Button at bottom -->
                    <Button Grid.Row="3"
                            Content="+ New Item" 
                            Command="{Binding AddNewItemCommand}"
                            Classes="PrimaryButton"
                            HorizontalAlignment="Stretch"
                            Margin="0,10,0,0"/>
                </Grid>
            </Border>
            
            <!-- Right: Item Details -->
            <ScrollViewer Grid.Column="1">
                <StackPanel Spacing="15" Margin="10"
                           IsEnabled="{Binding SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}">
                    
                    <TextBlock Text="Item Details" 
                              Classes="SectionHeader"
                              FontSize="18"/>
                    
                    <!-- Basic Info -->
                    <Border Background="{StaticResource ParchmentMedium}"
                           Padding="15"
                           CornerRadius="8">
                        <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto">
                            
                            <!-- ID (read-only) -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="ID:" 
                                      Classes="SmallText"
                                      VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                      Text="{Binding SelectedItem.Id}"
                                      FontWeight="Bold"
                                      VerticalAlignment="Center"/>
                            
                            <!-- Name -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Name:" 
                                      Classes="SmallText"
                                      VerticalAlignment="Center"
                                      Margin="0,10,0,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" 
                                    Text="{Binding SelectedItem.Name}"
                                    Margin="0,10,0,0"/>
                            
                            <!-- Is Key Item Toggle -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Key Item:" 
                                      Classes="SmallText"
                                      VerticalAlignment="Center"
                                      Margin="0,10,0,0"/>
                            <CheckBox Grid.Row="2" Grid.Column="1"
                                     Content="This is a key item"
                                     IsChecked="{Binding SelectedItem.IsKeyItem}"
                                     Margin="0,10,0,0"/>
                            
                            <!-- Description -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                      Text="Description:" 
                                      Classes="SmallText"
                                      VerticalAlignment="Top"
                                      Margin="0,10,0,0"/>
                            <TextBox Grid.Row="3" Grid.Column="1" 
                                    Text="{Binding SelectedItem.Description}"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Height="80"
                                    Margin="0,10,0,0"/>
                        </Grid>
                    </Border>
                    
                    <!-- Item Stats (Disabled when IsKeyItem = true) -->
                    <Border Background="{StaticResource ParchmentMedium}"
                           Padding="15"
                           CornerRadius="8"
                           IsEnabled="{Binding SelectedItem.IsKeyItem, Converter={x:Static BoolConverters.Not}}">
                        <StackPanel Spacing="10">
                            <TextBlock Text="Item Properties" 
                                      FontWeight="Bold"
                                      FontSize="14"
                                      Foreground="{StaticResource TextDark}"/>
                            <Separator/>
                            
                            <Grid ColumnDefinitions="120,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto">
                                
                                <!-- Price -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Price:" 
                                          Classes="SmallText"
                                          VerticalAlignment="Center"/>
                                <NumericUpDown Grid.Row="0" Grid.Column="1" 
                                              Value="{Binding SelectedItem.Price}"
                                              Minimum="0"
                                              Increment="10"/>
                                
                                <!-- Consumable -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Consumable:" 
                                          Classes="SmallText"
                                          VerticalAlignment="Center"
                                          Margin="0,10,0,0"/>
                                <CheckBox Grid.Row="1" Grid.Column="1"
                                         IsChecked="{Binding SelectedItem.Consumable}"
                                         Content="Use removes from inventory"
                                         Margin="0,10,0,0"/>
                                
                                <!-- HP Restore -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="HP Restore:" 
                                          Classes="SmallText"
                                          VerticalAlignment="Center"
                                          Margin="0,10,0,0"/>
                                <NumericUpDown Grid.Row="2" Grid.Column="1" 
                                              Value="{Binding SelectedItem.HpRestore}"
                                              Minimum="0"
                                              Increment="10"
                                              Margin="0,10,0,0"/>
                                
                                <!-- MP Restore -->
                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                          Text="MP Restore:" 
                                          Classes="SmallText"
                                          VerticalAlignment="Center"
                                          Margin="0,10,0,0"/>
                                <NumericUpDown Grid.Row="3" Grid.Column="1" 
                                              Value="{Binding SelectedItem.MpRestore}"
                                              Minimum="0"
                                              Increment="10"
                                              Margin="0,10,0,0"/>
                                
                                <!-- Effect Script -->
                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                          Text="Effect Script:" 
                                          Classes="SmallText"
                                          VerticalAlignment="Top"
                                          Margin="0,10,0,0"/>
                                <TextBox Grid.Row="4" Grid.Column="1" 
                                        Text="{Binding SelectedItem.EffectScript}"
                                        AcceptsReturn="True"
                                        TextWrapping="Wrap"
                                        Height="60"
                                        Watermark="Custom effect code..."
                                        Margin="0,10,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Delete Button -->
                    <Button Content="Delete Item" 
                           Command="{Binding DeleteItemCommand}"
                           Classes="SecondaryButton"
                           HorizontalAlignment="Right"/>
                    
                </StackPanel>
            </ScrollViewer>
            
        </Grid>
    </Border>
</UserControl>